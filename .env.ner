# NER Service Environment Variables

# Server
NER_PORT=8000
NER_HOST=0.0.0.0
NER_WORKERS=4
NER_TIMEOUT=30s

# Model Configuration
MODEL_PATH=/app/models
MODEL_LANG=vi,en
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=512

# Training
TRAIN_EPOCHS=10
TRAIN_BATCH_SIZE=16
TRAIN_LEARNING_RATE=2e-5
TRAIN_DATA_PATH=/app/data/training

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Security
API_KEY_REQUIRED=true
ALLOWED_ORIGINS=http://localhost:8080 