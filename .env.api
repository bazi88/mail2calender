# API Service Environment Variables

# Server
API_PORT=8080
API_HOST=0.0.0.0
API_DEBUG=true
API_TIMEOUT=30s

# Authentication
JWT_SECRET=your-jwt-secret
JWT_EXPIRY=24h
ENABLE_API_KEY=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mail2calendar
DB_USER=postgres
DB_PASS=postgres
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout